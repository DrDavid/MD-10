<?xml version="1.0" encoding="UTF-8" ?>

<!-- McDonnell Douglas MD-10 -->
<!-- External sound configuration -->

<PropertyList>

	<fx>
		<!-- Engine 1 sound -->
		<engine>
			<name>Engine 1 sound 1 external</name>
			<path>whine.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[0]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.0075</factor>
			</volume>
			<pitch>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.02</factor>
			</pitch>
			<!--orientation>
				<x>-1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>

		<engine>
			<name>Engine 1 sound 2 external</name>
			<path>jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[0]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.05</factor>
			</volume>
			<pitch>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
			<!--orientation>
				<x>1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>

		<engine>
			<name>Engine 1 reverse thrust</name>
			<path>exhaust_loop.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>engines/engine[0]/rpm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property>engines/engine[0]/reverser-pos-norm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<pitch>
				<property>engines/engine[0]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
		</engine>

		<!-- Engine 2 sound -->
		<engine>
			<name>Engine 2 sound 1 external</name>
			<path>whine.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[1]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.0075</factor>
			</volume>
			<pitch>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.02</factor>
			</pitch>
			<!--orientation>
				<x>-1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>

		<engine>
			<name>Engine 2 sound 2 external</name>
			<path>jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[1]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.05</factor>
			</volume>
			<pitch>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
			<!--orientation>
				<x>1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>

		<engine>
			<name>Engine 2 reverse thrust</name>
			<path>exhaust_loop.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>engines/engine[1]/rpm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property>engines/engine[1]/reverser-pos-norm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<pitch>
				<property>engines/engine[1]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
		</engine>

		<!-- Engine 3 sound -->
		<engine>
			<name>Engine 3 sound 1 external</name>
			<path>whine.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[2]/rpm</property>
				<offset>0</offset>
				<factor>0.0075</factor>
			</volume>
			<pitch>
				<property>engines/engine[2]/rpm</property>
				<offset>0</offset>
				<factor>0.02</factor>
			</pitch>
			<!--orientation>
				<x>-1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>

		<engine>
			<name>Engine 2 sound 3 external</name>
			<path>jet.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<not>
						<property>sim/current-view/internal</property>
					</not>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<volume>
				<property>engines/engine[2]/rpm</property>
				<offset>0</offset>
				<factor>0.05</factor>
			</volume>
			<pitch>
				<property>engines/engine[2]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
			<!--orientation>
				<x>1</x>
				<y>0</y>
				<z>0</z>
				<inner-angle>75</inner-angle>
				<outer-angle>210</outer-angle>
				<outer-gain>0.1</outer-gain>
			</orientation-->
		</engine>

		<engine>
			<name>Engine 3 reverse thrust</name>
			<path>exhaust_loop.wav</path>
			<mode>looped</mode>
			<condition>
				<and>
					<greater-than>
						<property>engines/engine[2]/rpm</property>
						<value>0</value>
					</greater-than>
					<greater-than>
						<property>engines/engine[2]/reverser-pos-norm</property>
						<value>0</value>
					</greater-than>
				</and>
			</condition>
			<pitch>
				<property>engines/engine[2]/rpm</property>
				<offset>0</offset>
				<factor>0.01</factor>
			</pitch>
		</engine>
		
		
		<rumble>
			<name>rumble</name>
			<mode>looped</mode>
			<path>roll.wav</path>
			<condition>
				<greater-than>
				<property>instrumentation/airspeed-indicator/indicated-speed-kt</property>
				<value>1</value>
				</greater-than>
				<or>
					<property>/gear/gear[0]/wow</property>
					<property>/gear/gear[1]/wow</property>
					<property>/gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<type>log</type>
				<factor>0.5</factor>
			</volume>
		</rumble>
		
		<squeal>
			<name>squeal</name>
			<path>squeal.wav</path>
			<condition>
				<or>
					<property>/gear/gear[0]/wow</property>
					<property>/gear/gear[1]/wow</property>
					<property>/gear/gear[2]/wow</property>
				</or>
			</condition>
			<volume>
				<property>/velocities/speed-down-fps</property>
				<factor>0.05</factor>
			</volume>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<factor>0.01</factor>
			</volume>
			<volume>
				<internal>dt_stop</internal>
				<factor>0.05</factor>
				<max>1.0</max>
			</volume>
			<pitch>
				<property>/velocities/airspeed-kt</property>
				<factor>0.0025</factor>
				<offset>1.2</offset>
			</pitch>
		</squeal>
 
		<flap>
			<name>flaps</name>
			<mode>in-transit</mode>
			<path>flaps.wav</path>
			<property>/surface-positions/flap-pos-norm</property>
			<volume>
				<factor>0.45</factor>
			</volume>
		</flap>

		<wind>
			<name>wind</name>
			<mode>looped</mode>
			<path>wind-8khz.wav</path>
			<property>/velocities/airspeed-kt</property>
			<volume>
				<property>/position/altitude-ft</property>
				<factor>-0.000015</factor>
				<offset>1.0</offset>
				<min>0.1</min>
				<max>1.0</max>
			</volume>
			<volume>
				<property>/velocities/airspeed-kt</property>
				<factor>0.0015</factor>
				<min>0.03</min>
				<max>0.25</max>
			</volume>
			<pitch>
				<property>/velocities/airspeed-kt</property>
				<factor>0.01</factor>
				<offset>1.25</offset>
			</pitch>
		</wind>

		<!-- Landing gear -->
		<gear>
			<name>Gear in transit</name>
			<path>flaps.wav</path>
			<mode>in-transit</mode>
			<property>gear/gear[0]/position-norm</property>
		</gear>

		<gear>
			<name>Gear door close</name>
			<path>door_close.wav</path>
			<mode>once</mode>
			<condition>
				<or>
					<equals>
						<property>gear/gear[0]/position-norm</property>
						<value>0</value>
					</equals>
					<equals>
						<property>gear/gear[0]/position-norm</property>
						<value>1</value>
					</equals>
				</or>
			</condition>
		</gear>

		<foo include="MD-10-internal-sound.xml" omit-node="y" />
	</fx>

</PropertyList>
