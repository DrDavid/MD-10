	</group>

	<hrule />

	<group>
		<layout>vbox</layout>

		<button>
			<legend>Close</legend>
			<default>true</default>
			<key>Esc</key>
			<padding>10</padding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

</PropertyList>
