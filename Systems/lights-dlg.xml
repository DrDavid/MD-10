<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

	<name>lights-dlg</name>
	<layout>vbox</layout>

	<group>
		<layout>hbox</layout>

		<empty>
			<stretch>1</stretch>
		</empty>

		<text>
			<label>Aircraft Lights</label>
		</text>
		
		<hrule/>
		
		<empty>
			<stretch>1</stretch>
		</empty>
		
		<text>
			<label>Landing Lights Must be on for Refuelling Boom!</label>
		</text>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<hrule/>

	<group>
		<layout>vbox</layout>

		<text>
			<label>Landing lights</label>
		</text>
		
		<group>
			<layout>hbox</layout>
			
			<button>
				<legend>TAXI</legend>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-port</property>
					<value>0</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-nose[1]</property>
					<value>1</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-stbd</property>
					<value>0</value>
				</binding>
			</button>
			
			<button>
				<legend>OFF</legend>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-port</property>
					<value>0</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-nose[1]</property>
					<value>0</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-stbd</property>
					<value>0</value>
				</binding>
			</button>
			
			<button>
				<legend>LAND</legend>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-port</property>
					<value>1</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-nose[1]</property>
					<value>1</value>
				</binding>
				<binding>
					<command>property-assign</command>
					<property>controls/lighting/landing-light-stbd</property>
					<value>1</value>
				</binding>
			</button>			
		</group>
		
		<group>
			<layout>hbox</layout>
			
			<button>
				<legend>LEFT</legend>
				<binding>
					<command>property-toggle</command>
					<property>controls/lighting/landing-light-port</property>
					<value>0</value>
				</binding>
			</button>
			
			<button>
				<legend>NOSE</legend>
				<binding>
					<command>property-toggle</command>
					<property>controls/lighting/landing-light-nose[1]</property>
					<value>0</value>
				</binding>
			</button>
			
			<button>
				<legend>RIGHT</legend>
				<binding>
					<command>property-toggle</command>
					<property>controls/lighting/landing-light-stbd</property>
				</binding>
			</button>			
		</group>
		
		<group>
			<layout>hbox</layout>		

			<text>
				<label>[LEFT]</label>
				<visible>
					<equals>
						<property>controls/lighting/landing-light-port</property>
						<value>1</value>
					</equals>
				</visible>
			</text>
		
			<text>
				<label>[NOSE]</label>
				<visible>
					<equals>
						<property>controls/lighting/landing-light-nose[1]</property>
						<value>1</value>
					</equals>
				</visible>
			</text>
		
			<text>
				<label>[RIGHT]</label>
				<visible>
					<equals>
						<property>controls/lighting/landing-light-stbd</property>
						<value>1</value>
					</equals>
				</visible>
			</text>
		</group>

		<hrule />

		<checkbox>
			<halign>left</halign>
			<label>Navigation lights</label>
			<property>controls/lighting/nav-lights</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>

		<checkbox>
			<halign>left</halign>
			<label>Strobe lights</label>
			<property>controls/lighting/strobe</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>                         

		<checkbox>
			<halign>left</halign>
			<label>Beacon</label>
			<property>controls/lighting/beacon</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
	</group>

	<hrule />
	
	<group>
		<layout>vbox</layout>
			
		<checkbox>
			<halign>left</halign>
			<label>Panel lights (Rembrandt required)</label>
			<property>controls/lighting/panel-lights</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>
			
		<checkbox>
			<halign>left</halign>
			<label>Cabin lights</label>
			<property>controls/lighting/cabin-lights</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		</checkbox>

		<text>
			<label>Instrument lighting</label>
		</text>

		<slider>
			<row>0</row>
			<col>0</col>
			<halign>center</halign>
			<pref-width>100</pref-width>
			<property>controls/lighting/instruments-norm</property>
			<step>0.05</step>
			<min>0</min>
			<max>1</max>
			<live type="bool">true</live>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</slider>
		
		<layout>table</layout>
		

		<property>controls/lighting/cabin-lights</property>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<live>true</live>
		
		<layout>table</layout>

		<text>
			<row>0</row>
			<col>0</col>
			<halign>center</halign>
			<label>Flight deck displays</label>
		</text>
		<slider>
			<row>1</row>
			<col>0</col>
			<halign>center</halign>
			<pref-width>100</pref-width>
			<property>controls/lighting/display-norm</property>
			<step>0.05</step>
			<min>0</min>
			<max>1</max>
			<live type="bool">true</live>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</slider>
		
		<layout>vbox</layout>
		
		<text>
			<row>0</row>
			<col>1</col>
			<halign>center</halign>
			<label>Overhead panel lights</label>
		</text>
		<slider>
			<row>1</row>
			<col>1</col>
			<halign>center</halign>
			<pref-width>100</pref-width>
			<property>controls/lighting/ovhd-panel-norm</property>
			<step>0.05</step>
			<min>0</min>
			<max>1</max>
			<live type="bool">true</live>
			<binding>
				<command>dialog-apply</command>
			</binding>
		</slider>
		
