	<debug type="bool">false</debug>
	<max-rate-of-change>0.5</max-rate-of-change>
	<input>
	    <expression>
		<max>
		    <property>controls/flight/spoilers-ground-cmd-norm</property>
		    <product>
			<property>controls/flight/speedbrakes-cmd-norm</property>
			<value>0.5</value>
		    </product>
		</max>
