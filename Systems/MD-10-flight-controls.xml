    <!-- Nose gear steering -->
    <filter>
	<name>Tiller disabled nose gear steer</name>
	<type>gain</type>
	<debug type="bool">false</debug>
	<gain>68</gain>
	<enable>
	    <condition>
		<and>
		    <not>
			<property>controls/gear/enable-tiller</property>
		    </not>
		    <property>gear/gear[0]/wow</property>
		</and>
	    </condition>
	</enable>
	<input>
	    <property>controls/flight/rudder</property>
	</input>
	<output>controls/gear/steering-deg</output>
    </filter>
    <!-- Rudder can steer up to 10°, tiller steers up to 68° -->
    <filter>
	<name>Nose gear rudder steer</name>
	<type>gain</type>
	<debug type="bool">false</debug>
	<gain>10</gain>
	<enable>
	    <condition>
		<and>
		    <less-than-equals>
			<expression>
			    <abs>
				<property>controls/gear/tiller-steer-deg</property>
			    </abs>
			</expression>
			<value>10</value>
		    </less-than-equals>
		    <property>controls/gear/enable-tiller</property>
		    <property>gear/gear[0]/wow</property>
		</and>
	    </condition>
	</enable>
	<input>
	    <property>controls/flight/rudder</property>
	</input>
	<output>controls/gear/steering-deg</output>
    </filter>
    <filter>
	<name>Nose gear tiller steer</name>
	<type>gain</type>
	<debug type="bool">false</debug>
	<gain>1</gain>
	<enable>
	    <condition>
		<and>
		    <greater-than>
			<expression>
			    <abs>
				<property>controls/gear/tiller-steer-deg</property>
			    </abs>
			</expression>
			<value>10</value>
		    </greater-than>
		    <property>controls/gear/enable-tiller</property>
		    <property>gear/gear[0]/wow</property>
		</and>
	    </condition>
	</enable>
	<input>
	    <property>controls/gear/tiller-steer-deg</property>
	</input>
	<output>controls/gear/steering-deg</output>
    </filter>
    <filter>
	<name>Nose gear center</name>
	<type>noise-spike</type>
	<debug type="bool">false</debug>
	<max-rate-of-change>26.666666667</max-rate-of-change>
	<enable>
	    <condition>
		<not>
		    <property>gear/gear[0]/wow</property>
		</not>
	    </condition>
	</enable>
	<input>
	    <value>0</value>
	</input>
	<output>controls/gear/steering-deg</output>
    </filter>

