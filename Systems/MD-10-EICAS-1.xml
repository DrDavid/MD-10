	<!-- Warnings -->
	<message>
		<priority type="int">0</priority>
		<text type="string">APU fire</text>
		<color>
			<red alias="../../../colors/red/red" />
			<green alias="../../../colors/red/green" />
			<blue alias="../../../colors/red/blue" />
		</color>
		<condition>
			<property>engines/apu/on-fire</property>
		</condition>
	</message>
	<message>
		<priority type="int">0</priority>
		<text type="string">Config aileron</text>
		<color>
			<red alias="../../../colors/red/red" />
			<green alias="../../../colors/red/green" />
			<blue alias="../../../colors/red/blue" />
		</color>
		<condition>
			<and>
				<or>
					<greater-than>
						<property>controls/flight/aileron-trim</property>
						<value>0.033333333</value>
					</greater-than>
					<less-than>
						<property>controls/flight/aileron-trim</property>
						<value>-0.033333333</value>
					</less-than>
				</or>
				<property>gear/gear[1]/wow</property>
				<property>gear/gear[2]/wow</property>
				<greater-than>
					<property>engines/engine[0]/rpm</property>
					<value>70</value>
				</greater-than>
				<greater-than>
					<property>engines/engine[1]/rpm</property>
					<value>70</value>
				</greater-than>
				<not>
					<property>controls/engines/engine[0]/reverser</property>
				</not>
				<not>
					<property>controls/engines/engine[1]/reverser</property>
				</not>
			</and>
		</condition>
	</message>
	<message>
		<priority type="int">0</priority>
		<text type="string">Config AP</text>
		<color>
			<red alias="../../../colors/red/red" />
			<green alias="../../../colors/red/green" />
			<blue alias="../../../colors/red/blue" />
		</color>
		<condition>
			<and>
				<property>controls/autoflight/autopilot/engage</property>
				<property>gear/gear[1]/wow</property>
				<property>gear/gear[2]/wow</property>
				<greater-than>
					<property>engines/engine[0]/rpm</property>
					<value>70</value>
				</greater-than>
				<greater-than>
					<property>engines/engine[1]/rpm</property>
					<value>70</value>
				</greater-than>
				<not>
					<property>controls/engines/engine[0]/reverser</property>
				</not>
				<not>
					<property>controls/engines/engine[1]/reverser</property>
				</not>
			</and>
		</condition>
	</message>
	<message>
		<priority type="int">0</priority>
		<text type="string">Config flaps</text>
		<color>
			<red alias="../../../colors/red/red" />
			<green alias="../../../colors/red/green" />
			<blue alias="../../../colors/red/blue" />
		</color>
		<condition>
			<and>
				<or>
					<equals>
						<property>controls/flight/flaps</property>
						<value>0</value>
					</equals>
					<greater-than>
						<property>controls/flight/flaps</property>
						<value>0.444</value>
					</greater-than>
				</or>
				<property>gear/gear[1]/wow</property>
				<property>gear/gear[2]/wow</property>
				<greater-than>
					<property>engines/engine[0]/rpm</property>
					<value>70</value>
				</greater-than>
				<greater-than>
					<property>engines/engine[1]/rpm</property>
					<value>70</value>
				</greater-than>
				<not>
					<property>controls/engines/engine[0]/reverser</property>
				</not>
				<not>
					<property>controls/engines/engine[1]/reverser</property>
				</not>
			</and>
		</condition>
	</message>
	<message>
		<priority type="int">0</priority>
		<text type="string">Config rudder</text>
