<?xml version="1.0"?>
<PropertyList>

<name>doors</name>
    <layout>vbox</layout>
    <padding>20</padding>

	<group>
		<layout>hbox</layout>

		<empty>
			<stretch>1</stretch>
		</empty>

		<text>
			<label>Doors</label>
		</text>

		<empty>
			<stretch>1</stretch>
		</empty>

		<button>
			<pref-width>16</pref-width>
			<pref-height>16</pref-height>
			<legend></legend>
			<keynum>27</keynum>
			<border>2</border>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
	</group>

	<hrule />

	<text>
		<halign>center</halign>
		<label>Open and close the doors by using the controls below, or simply</label>
	</text>

	<text>
		<halign>center</halign>
		<label>click them on the model. (Press Ctrl-C to outline clickable objects.)</label>
	</text>

	<hrule />

	<text>
		<label>PAX doors</label>
	</text>

	<group>
		<layout>hbox</layout>

		<group>
			<layout>table</layout>

			<text>
				<row>0</row>
				<col>0</col>
				<label>Left door 1</label>
			</text>
			<button>
				<row>0</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.leftDoor1.toggle();</script>
				</binding>
			</button>

			<text>
				<row>1</row>
				<col>0</col>
				<label>Left door 2</label>
			</text>
			<button>
				<row>1</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.leftDoor2.toggle();</script>
				</binding>
			</button>

			<text>
				<row>2</row>
				<col>0</col>
				<label>Left door 3</label>
			</text>
			<button>
				<row>2</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.leftDoor3.toggle();</script>
				</binding>
			</button>

			<text>
				<row>3</row>
				<col>0</col>
				<label>Left door 4</label>
			</text>
			<button>
				<row>3</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.leftDoor4.toggle();</script>
				</binding>
			</button>
		</group>

		<vrule />

		<group>
			<layout>table</layout>

			<text>
				<row>0</row>
				<col>0</col>
				<label>Right door 1</label>
			</text>
			<button>
				<row>0</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.rightDoor1.toggle();</script>
				</binding>
			</button>

			<text>
				<row>1</row>
				<col>0</col>
				<label>Right door 2</label>
			</text>
			<button>
				<row>1</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.rightDoor2.toggle();</script>
				</binding>
			</button>

			<text>
				<row>2</row>
				<col>0</col>
				<label>Right door 3</label>
			</text>
			<button>
				<row>2</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.rightDoor3.toggle();</script>
				</binding>
			</button>

			<text>
				<row>3</row>
				<col>0</col>
				<label>Right door 4</label>
			</text>
			<button>
				<row>3</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.rightDoor4.toggle();</script>
				</binding>
			</button>
		</group>
	</group>

	<hrule />

	<group>
		<layout>table</layout>
		
			<text>
				<row>0</row>
				<col>0</col>
				<label>Cargo Door</label>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>MD-10-10F</value>
					</equals>
				</or>
			</visible>
			</text>
			<button>
				<row>0</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.cargoDoor.toggle();</script>
				</binding>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>MD-10-10F</value>
					</equals>
				</or>
			</visible>
			</button>
			
			<text>
				<row>1</row>
				<col>0</col>
				<label>Nose cone</label>
			</text>
			<button>
				<row>1</row>
				<col>1</col>
				<legend>Open/Close</legend>
				<binding>
					<command>nasal</command>
       <script>MD11.nose_cone.toggle();</script>
				</binding>
			</button>

		<text>
			<row>0</row>
			<col>0</col>
			<label>Forward cargo door</label>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30ER</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30CF</value>
					</equals>
				</or>
			</visible>
		</text>
		<button>
			<row>0</row>
			<col>1</col>
			<legend>Open</legend>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30ER</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30CF</value>
					</equals>
				</or>
			</visible>
			<color>
				<red>0</red>
				<green>1</green>
				<blue>0</blue>
			</color>
			<binding>
				<command>nasal</command>
				<script>
					DC10.doors.cargo_fwd.open();
				</script>
			</binding>
		</button>
		<button>
			<row>0</row>
			<col>2</col>
			<legend>Close</legend>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30ER</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30CF</value>
					</equals>
				</or>
			</visible>
			<color>
				<red>1</red>
				<green>0</green>
				<blue>0</blue>
			</color>
			<binding>
				<command>nasal</command>
				<script>
					DC10.doors.cargo_fwd.close();
				</script>
			</binding>
		</button>

		<text>
			<row>1</row>
			<col>0</col>
			<label>Aft cargo door</label>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30ER</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30CF</value>
					</equals>
				</or>
			</visible>
		</text>
		<button>
			<row>1</row>
			<col>1</col>
			<legend>Open</legend>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30ER</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30CF</value>
					</equals>
				</or>
			</visible>
			<color>
				<red>0</red>
				<green>1</green>
				<blue>0</blue>
			</color>
			<binding>
				<command>nasal</command>
				<script>
					DC10.doors.cargo_aft.open();
				</script>
			</binding>
		</button>
		<button>
			<row>1</row>
			<col>2</col>
			<legend>Close</legend>
			<visible>
				<or>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30ER</value>
					</equals>
					<equals>
						<property>sim/aircraft</property>
						<value>DC-10-30CF</value>
					</equals>
				</or>
			</visible>
			<color>
				<red>1</red>
				<green>0</green>
				<blue>0</blue>
			</color>
			<binding>
				<command>nasal</command>
				<script>
					DC10.doors.cargo_aft.close();
				</script>
			</binding>
		</button>

		<text>
			<row>2</row>
			<col>0</col>
			<label>Main cargo door</label>
			<visible>
				<equals>
					<property>sim/model/configuration</property>
					<value>cargo</value>
				</equals>
			</visible>
		</text>
		<button>
			<row>2</row>
			<col>1</col>
			<legend>Open</legend>
			<visible>
				<equals>
					<property>sim/model/configuration</property>
					<value>cargo</value>
				</equals>
			</visible>
			<color>
				<red>0</red>
				<green>1</green>
				<blue>0</blue>
			</color>
			<binding>
				<command>nasal</command>
				<script>
					DC10.doors.cargo_main.open();
				</script>
			</binding>
		</button>
		<button>
			<row>2</row>
			<col>2</col>
			<legend>Close</legend>
			<visible>
				<equals>
					<property>sim/model/configuration</property>
					<value>cargo</value>
				</equals>
			</visible>
			<color>
				<red>1</red>
				<green>0</green>
				<blue>0</blue>
			</color>
			<binding>
				<command>nasal</command>
				<script>
					DC10.doors.cargo_main.close();
				</script>
			</binding>
		</button>
	</group>

	<hrule/>

	<group>
		<layout>vbox</layout>

		<button>
			<legend>Close</legend>
			<default>true</default>
			<key>Esc</key>
			<padding>10</padding>
			<binding>
				<command>dialog-apply</command>
			</binding>
			<binding>
				<command>dialog-close</command>
			</binding>
		</button>
		
	</group>
</PropertyList>
