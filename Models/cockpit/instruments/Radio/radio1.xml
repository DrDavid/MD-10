    <path>radio.ac</path>
    
    		  <animation>
<type>shader</type>
<shader>chrome</shader>
<texture>chrome_cockpit.png</texture>
<object-name>cockpit.glass</object-name>
</animation>

    <animation>
        <name>comm1</name>
        <object-name>freq</object-name>
        <object-name>freq.001</object-name>
        <object-name>freq.002</object-name>
        <object-name>freq.003</object-name>
        <object-name>freq.004</object-name>
        <object-name>freq.005</object-name>
        <object-name>freq.006</object-name>
        <object-name>freq.007</object-name> 
        <object-name>stby</object-name>
        <object-name>stby.001</object-name>
        <object-name>stby.002</object-name>
        <object-name>stby.003</object-name>
        <object-name>stby.004</object-name>
        <object-name>stby.005</object-name>
        <object-name>stby.006</object-name>
        <object-name>vhf-l.btn.light</object-name>
        <object-name>vhf-r.btn.light</object-name>
        <object-name>hf-l.btn.light</object-name>
        <object-name>hf-r.btn.light</object-name>
        <type>select</type>
        <condition>
            <greater-than>
                <property>systems/electrical/CPT-FLT-INST</property>
                <value>5</value>
            </greater-than>
        </condition>
    </animation>


<!-- Active freq nav mode -->

    <animation>
        <type>textranslate</type>
        <object-name>freq.007</object-name>
        <property>instrumentation/efis/radio-mode</property>
        <factor>0.03320</factor>
        <axis>
            <x>0</x>
            <y>-1</y>
            <z>0</z>
        </axis>
    </animation>
    
        <animation>
        <condition>
        <equals>
        <property>instrumentation/efis/radio-mode</property>
          <value>0</value>
          </equals>
        </condition>
        <type>select</type>
        <object-name>vhf-l.btn.light</object-name>
    </animation>
    
      <animation>
        <condition>
        <equals>
        <property>instrumentation/efis/radio-mode</property>
          <value>1</value>
          </equals>
        </condition>
        <type>select</type>
        <object-name>vhf-r.btn.light</object-name>
    </animation>
    
      <animation>
        <condition>
        <equals>
        <property>instrumentation/efis/radio-mode</property>
          <value>2</value>
