<?xml version="1.0" encoding="UTF-8" ?>

<!-- McDonnell Douglas MD-10 -->
<!-- Radio altimeter -->

<PropertyList>

	<path>radio-alt.ac</path>

	<params>
		<radar-altitude-ft>instrumentation/radar-altimeter/radar-altitude-ft</radar-altitude-ft>
		<decision-height-ft>instrumentation/radar-altimeter/decision-height-ft</decision-height-ft>
	</params>
	<alert-light-emit>
		<red>0.5</red>
		<green>0.388</green>
		<blue>0</blue>
	</alert-light-emit>
	
	<animation>
		<type>material</type>
		<object-name>Face</object-name>
		<object-name>Tape</object-name>
		<object-name>DH1</object-name>
		<object-name>DH10</object-name>
		<object-name>DH100</object-name>
		<object-name>DHBug</object-name>
		<emission>
			<red>0.5</red>
			<green>0.5</green>
			<blue>0.273</blue>
			<factor-prop>controls/lighting/instruments-norm</factor-prop>
		</emission>
	</animation>
	
	<animation>
		<type>material</type>
		<object-name>DHLight</object-name>
		<condition>
			<or>
				<and>
					<less-than-equals>
						<property alias="../../../../../../params/radar-altitude-ft" />
						<value>1800</value>
					</less-than-equals>
					<greater-than>
						<property alias="../../../../../../params/radar-altitude-ft" />
						<value>1700</value>
					</greater-than>
				</and>
				<and>
					<less-than-equals>
						<property alias="../../../../../../params/radar-altitude-ft" />
						<property alias="../../../../../../params/decision-height-ft" />
					</less-than-equals>
					<greater-than>
						<property alias="../../../../../../params/radar-altitude-ft" />
						<expression>
							<dif>
								<property alias="../../../../../../../../params/decision-height-ft" />
								<value>100</value>
							</dif>
						</expression>
					</greater-than>
				</and>
			</or>
		</condition>
		<emission>
			<red alias="../../../alert-light-emit/red" />
			<green alias="../../../alert-light-emit/green" />
			<blue alias="../../../alert-light-emit/blue" />
		</emission>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>Tape</object-name>
		<property alias="../../params/radar-altitude-ft" />
		<interpolation>
			<entry><ind>0</ind><dep>0</dep></entry>
			<entry><ind>2500</ind><dep>0.912109375</dep></entry>
		</interpolation>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>texmultiple</type>
		<object-name>DHBug</object-name>
		<transform>
			<subtype>textranslate</subtype>
			<property alias="../../../params/radar-altitude-ft" />
			<interpolation>
				<entry><ind>0</ind><dep>0</dep></entry>
				<entry><ind>2500</ind><dep>0.912109375</dep></entry>
			</interpolation>
			<axis>
				<x>0</x>
				<y>1</y>
			</axis>
		</transform>
		<transform>
			<subtype>textranslate</subtype>
			<property alias="../../../params/decision-height-ft" />
			<interpolation>
				<entry><ind>0</ind><dep>0</dep></entry>
				<entry><ind>2500</ind><dep>-0.912109375</dep></entry>
			</interpolation>
			<axis>
				<x>0</x>
				<y>1</y>
			</axis>
		</transform>
	</animation>

	<animation>
		<type>textranslate</type>
		<object-name>DH100</object-name>
		<property alias="../../params/decision-height-ft" />
		<factor>0.001</factor>
		<step>100</step>
		<scroll>10</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>DH10</object-name>
		<property alias="../../params/decision-height-ft" />
		<factor>0.01</factor>
		<step>10</step>
		<scroll>1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>
	<animation>
		<type>textranslate</type>
		<object-name>DH1</object-name>
		<property alias="../../params/decision-height-ft" />
		<factor>0.1</factor>
		<step>1</step>
		<scroll>0.1</scroll>
		<axis>
			<x>0</x>
			<y>1</y>
		</axis>
	</animation>

	<animation>
		<type>pick</type>
		<object-name>Knob</object-name>
		<action>
			<button>0</button>
			<button>3</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/decision-height-ft" />
				<step>1</step>
				<max>999</max>
			</binding>	
		</action>
		<action>
			<button>1</button>
			<button>4</button>
			<repeatable type="bool">true</repeatable>
			<binding>
				<command>property-adjust</command>
				<property alias="../../../../params/decision-height-ft" />
				<step>-1</step>
				<min>0</min>
			</binding>		
		</action>
	</animation>

</PropertyList>
