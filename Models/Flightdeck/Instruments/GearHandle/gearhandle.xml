				<property>systems/electrical/outputs/efis</property>
		</condition>
	</animation>
	
	        <animation>
        <type>select</type>
        <object-name>lg.nose.green</object-name>
        <condition>
        <greater-than>
		<property>gear/gear[0]/position-norm</property>
		<value>0.99</value>
		</greater-than>
       </condition>
    </animation>
    
	        <animation>
        <type>select</type>
        <object-name>lg.nose.red</object-name>
        <condition>
        <and>
