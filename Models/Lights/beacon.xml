<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>rednav.ac</path>

	<params>
		<source>systems/electrical/outputs/beacon</source>
	</params>

	<animation>
		<type>select</type>
		<condition>
			<and>
				<not>
					<property>sim/current-view/internal</property>
				</not>
				<greater-than>
					<property alias="../../../../../params/source" />
					<value>5</value>
				</greater-than>
			</and>
		</condition>
	</animation>

	<animation>
		<type>billboard</type>
	</animation>
	
	<animation>
		<type>light</type>
		<light-type>point</light-type>
		<object-name>Sphere</object-name>
		<position>
			<x>0</x>
			<y>0</y>
			<z>0</z>
		</position>
		<ambient>
			<r>0.03</r>
			<g>0.03</g>
			<b>0.03</b>
			<a>1.0</a>
		</ambient>
		<diffuse>
			<r>1.0</r>
			<g>0.2</g>
			<b>0.2</b>
			<a>1.0</a>
		</diffuse>
		<specular>
			<r>0.7</r>
			<g>0.7</g>
			<b>0.7</b>
			<a>1.0</a>
		</specular>
		<attenuation>
			<c>1.0</c>
			<l>0.002</l>
			<q>0.005</q>
		</attenuation>
		<exponent>2.0</exponent>
		<near-m>0.0001</near-m>
		<far-m>79</far-m>
		<cutoff>110</cutoff>
	</animation>
	
	<effect>
		<name>REMBRANDT transparency</name>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Light</object-name>
	</effect>

</PropertyList>
