<?xml version="1.0" encoding="UTF-8" ?>

<PropertyList>

	<path>landing.ac</path>

	<animation>
		<type>select</type>
		<condition>
			<and>
				<not>
					<property>sim/current-view/internal</property>
				</not>
				<greater-than>
					<property>systems/electrical/outputs/taxi-lights</property>
					<value>5</value>
				</greater-than>
			</and>
		</condition>
	</animation>
	<animation>
		<type>light</type>
		<light-type>spot</light-type>
		<object-name>Cone</object-name>
		<nopreview/>
		<position>
			<x>0</x>
			<y>0</y>
			<z>0</z>
		</position>
		<direction>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</direction>
		<ambient>
			<r>0.3</r>
			<g>0.3</g>
			<b>0.3</b>
			<a>1.0</a>
		</ambient>
		<diffuse>
			<r>0.7</r>
			<g>0.7</g>
			<b>0.6</b>
			<a>1.0</a>
		</diffuse>
		<specular>
			<r>0.7</r>
			<g>0.7</g>
			<b>0.7</b>
			<a>1.0</a>
		</specular>
		<attenuation>
			<c>1.0</c>
			<l>0.002</l>
			<q>0.00005</q>
		</attenuation>
		<exponent>30.0</exponent>
		<near-m>15</near-m>
		<far-m>180</far-m>
		<cutoff>120</cutoff>
	</animation>
	<animation>
		<type>flash</type>
		<object-name>Light</object-name>
		<power>15</power>
		<factor>2</factor>
		<min>0.2</min>
		<max>7</max>
		<two-sides type="bool">false</two-sides>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>
	
	<effect>
		<name>REMBRANDT transparency</name>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Light</object-name>
	</effect>

</PropertyList>
