		<condition>
			<greater-than>
				<property>systems/electrical/outputs/landing-light-butt[0]</property>
				<value>5</value>
			</greater-than>
		</condition>
	</animation>
	<animation>
		<type>light</type>
		<light-type>spot</light-type>
		<object-name>Cone</object-name>
		<nopreview />
		<position>
			<x>0</x>
			<y>0</y>
			<z>0</z>
		</position>
		<direction>
			<x>1</x>
			<y>0</y>
			<z>0</z>
		</direction>
		<ambient>
			<r>0.8</r>
			<g>0.8</g>
			<b>0.8</b>
			<a>1.0</a>
		</ambient>
		<diffuse>
			<r>0.7</r>
			<g>0.7</g>
			<b>0.6</b>
			<a>1.0</a>
		</diffuse>
		<specular>
			<r>0.7</r>
			<g>0.7</g>
			<b>0.7</b>
			<a>1.0</a>
		</specular>
		<attenuation>
			<c>1.0</c>
			<l>0.002</l>
			<q>0.00005</q>
		</attenuation>
		<exponent>30.0</exponent>
		<near-m>15</near-m>
		<far-m>1500</far-m>
		<cutoff>2000</cutoff>
	</animation>
	<animation>
		<type>flash</type>
		<object-name>Light</object-name>
		<power>10</power>
		<factor>3</factor>
		<min>1</min>
		<max>6</max>
		<two-sides type="bool">false</two-sides>
		<axis>
			<x>-1</x>
			<y>0</y>
			<z>0</z>
		</axis>
	</animation>

	<effect>
		<name>REMBRANDT transparency</name>
		<inherits-from>Effects/model-transparent</inherits-from>
		<object-name>Light</object-name>
	</effect>

</PropertyList>
