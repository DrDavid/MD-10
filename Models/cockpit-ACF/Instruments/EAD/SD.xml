
<PropertyList>

 <path>SD.ac</path>
 
    <animation>
    <type>scale</type>
    <x-offset>1.1</x-offset>
    <y-offset>1.1</y-offset>
    <z-offset>1.1</z-offset>
    </animation>
	
    <animation>
        <type>select</type>
        <object-name>Off</object-name>
        <condition>
            <less-than>
                <property>systems/electrical/outputs/efis</property>
                <value>15</value>
            </less-than>
        </condition>
    </animation>


	<model>
		<name>CONFIG</name>
		<path>Aircraft/MD-10/Models/cockpit/instruments/EAD/CONFIG.xml</path>
	</model>
	
	<animation>
		<type>select</type>
		<object-name>CONFIG</object-name>
		<condition>
			<equals>
				<property>/controls/sd/mode</property>
				<value>CONFIG</value>
			</equals>
		</condition>
	</animation>
	
